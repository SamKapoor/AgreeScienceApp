<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_advisory_detail_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_title_advisory_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c3d2ff"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
        <com.agriscienceapp.font.AgriScienceTextView
            android:id="@+id/tv_advisory_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:typeface="2" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_advisory_image_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_title_advisory_detail"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            >

            <ImageView
                android:id="@+id/iv_advisory_detail_first"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:minHeight="200dp"
                android:minWidth="150dp"
                android:scaleType="fitXY" />

            <ProgressBar
                android:id="@+id/progressbar_advisory_detail_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:visibility="visible" />

        </RelativeLayout>

        <com.agriscienceapp.font.AgriScienceTextView
            android:id="@+id/tv_advisory_decsription_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_advisory_image_first"
            android:layout_margin="10dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:typeface="1" />

        <RelativeLayout
            android:id="@+id/ll_advisory_image_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_advisory_decsription_detail"
            android:layout_marginTop="10dp">

            <ProgressBar
                android:id="@+id/progressbar_advisory_detail_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_ads_advisory_detail"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"/>
        </RelativeLayout>


    </RelativeLayout>
</ScrollView>