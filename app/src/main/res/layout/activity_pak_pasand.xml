<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <!-- TODO: Update blank fragment layout -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.agriscienceapp.font.AgriScienceTextView
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="left"
                    android:text="પાક"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/green"
                    app:typeface="2" />

                <com.agriscienceapp.font.AgriScienceTextView
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="left"
                    android:text="માર્કેટ"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/green"
                    app:typeface="2" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/orange" />

            <LinearLayout
                android:id="@+id/ll_pak_pasand"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <Spinner
                    android:id="@+id/spinner_crop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp"
                    android:layout_weight="1.2"
                    android:dropDownSelector="@color/green" />

                <Spinner
                    android:id="@+id/spinner_yard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp"
                    android:layout_weight="1.2" />

                <com.agriscienceapp.font.AgriScienceTextView
                    android:id="@+id/btn_add"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:background="@drawable/customshape_odd"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="ઉમેરો"
                    android:textColor="@android:color/white"
                    app:typeface="2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/orange" />

            <LinearLayout
                android:id="@+id/ll_selected_crop1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <com.agriscienceapp.font.AgriScienceTextView
                    android:id="@+id/tv_advertise_1"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/sky_color"
                    app:typeface="2" />

                <com.agriscienceapp.font.AgriScienceTextView
                    android:id="@+id/btn_delete_Adv_1"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@android:color/holo_red_light"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="કાઢો"
                    android:textColor="@android:color/white"
                    app:typeface="2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_selected_crop2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <com.agriscienceapp.font.AgriScienceTextView
                    android:id="@+id/tv_advertise_2"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:background="@color/sky_color"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.7"
                    app:typeface="2" />

                <com.agriscienceapp.font.AgriScienceTextView
                    android:id="@+id/btn_delete_Adv_2"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@android:color/holo_red_light"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="કાઢો"
                    android:textColor="@android:color/white"
                    app:typeface="2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_selected_crop3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <com.agriscienceapp.font.AgriScienceTextView
                    android:id="@+id/tv_advertise_3"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/sky_color"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    app:typeface="2" />

                <com.agriscienceapp.font.AgriScienceTextView
                    android:id="@+id/btn_delete_Adv_3"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@android:color/holo_red_light"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="કાઢો"
                    android:textColor="@android:color/white"
                    app:typeface="2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_selected_crop4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <com.agriscienceapp.font.AgriScienceTextView
                    android:id="@+id/tv_advertise_4"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:background="@color/sky_color"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    app:typeface="2" />

                <com.agriscienceapp.font.AgriScienceTextView
                    android:id="@+id/btn_delete_Adv_4"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@android:color/holo_red_light"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="કાઢો"
                    android:textColor="@android:color/white"
                    app:typeface="2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_selected_crop5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <com.agriscienceapp.font.AgriScienceTextView
                    android:id="@+id/tv_advertise_5"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_width="0dp"
                    android:padding="10dp"
                    android:background="@color/sky_color"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    app:typeface="2" />

                <com.agriscienceapp.font.AgriScienceTextView
                    android:id="@+id/btn_delete_Adv_5"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@android:color/holo_red_light"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="કાઢો"
                    android:textColor="@android:color/white"
                    app:typeface="2" />

            </LinearLayout>

        </LinearLayout>

        <com.agriscienceapp.font.AgriScienceTextView
            android:id="@+id/tv_Alert"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="0.3"
            android:background="@drawable/customshape_odd"
            android:padding="15dp"
            android:text="પાંચ થી વધારે ઉમરી ના શકાય."
            android:textColor="@android:color/white"
            android:visibility="gone"
            app:typeface="2" />

    </RelativeLayout>
</ScrollView>