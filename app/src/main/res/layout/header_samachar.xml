<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header_ll_Samachar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/header_ll_Samachar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <ProgressBar
                android:id="@+id/progressbar_samachar_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/header_iv_Samachar"
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:maxWidth="150dp"
                android:minHeight="250dp"
                android:scaleType="fitXY"
                android:src="@drawable/app_logo_header" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <com.agriscienceapp.font.AgriScienceTextView
                    android:id="@+id/header_Tv_Samachar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:background="@color/black_transparent"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:padding="3dp"
                    android:text="Text"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:typeface="2" />

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_samachar_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:minHeight="30dp"
        android:minWidth="30dp"
        android:src="@drawable/share_round"
        android:visibility="gone" />


</LinearLayout>