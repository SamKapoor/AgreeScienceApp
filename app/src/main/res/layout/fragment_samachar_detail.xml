<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_samachar_detail_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_samachar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">
            <com.agriscienceapp.font.AgriScienceTextView
                android:id="@+id/tv_samachar_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Title"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:typeface="1"
                android:layout_weight="1.5"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:src="@drawable/ic_menu_share"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_samachar_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_Samachar_detail_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:minHeight="150dp"
                android:minWidth="150dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/app_logo"
                android:contentDescription="Simple Load"/>

            <ProgressBar
                android:id="@+id/progressbar_samachar_detail_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>

        <com.agriscienceapp.font.AgriScienceTextView
            android:id="@+id/tv_samachar_detail_discription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            app:typeface="1"
            android:ellipsize="end"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Discription"
            android:textColor="@android:color/black"
            android:textSize="14sp" />


        <LinearLayout
            android:id="@+id/ll_samachar_description_second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_Samachar_detail_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:minHeight="150dp"
                android:minWidth="150dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/app_logo"
                android:contentDescription="Simple Load"/>

            <ProgressBar
                android:id="@+id/progressbar_samachar_detail_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>