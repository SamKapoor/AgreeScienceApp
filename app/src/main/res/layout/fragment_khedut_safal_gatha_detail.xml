<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:id="@+id/rl_khedutgatha_detail_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.agriscienceapp.font.AgriScienceTextView
        android:id="@+id/tv_khedutsafalgatha_description_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        app:typeface="2"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"/>

    <ImageView
        android:id="@+id/iv_share_khedutgatha_detail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/share_round"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/tv_khedutsafalgatha_description_title"/>



    <RelativeLayout
        android:id="@+id/rl_khedutsafalgatha_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/iv_share_khedutgatha_detail">

        <ImageView
            android:id="@+id/iv_khedutsafalgatha_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:minHeight="150dp"
            android:minWidth="150dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_centerInParent="true"/>

        <ProgressBar
            android:id="@+id/progressbar_khedutgatha_detail_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible"/>
    </RelativeLayout>

    <com.agriscienceapp.font.AgriScienceTextView
        android:id="@+id/tv_khedutsafalgatha_decsription_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_khedutsafalgatha_description"
        android:text=""
        android:textColor="@android:color/black"
        app:typeface="1"
        android:textSize="18sp"
        android:layout_margin="10dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_khedutsafalgatha_decsription_detail">


        <ProgressBar
            android:id="@+id/progressbar_khedutgatha_detail_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible"/>

    <ImageView
        android:id="@+id/iv_khedutsafalgatha_description_second"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:scaleType="fitXY" />


    </RelativeLayout>

</RelativeLayout>
    </ScrollView>