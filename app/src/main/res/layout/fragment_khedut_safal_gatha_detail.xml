<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_khedutgatha_detail_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.agriscienceapp.font.AgriScienceTextView
            android:id="@+id/tv_khedutsafalgatha_description_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:typeface="2" />

        <ImageView
            android:id="@+id/iv_share_khedutgatha_detail"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_khedutsafalgatha_description_title"
            android:layout_marginEnd="10dp"
            android:src="@drawable/share_round" />


        <RelativeLayout
            android:id="@+id/rl_khedutsafalgatha_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_share_khedutgatha_detail"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/iv_khedutsafalgatha_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:minHeight="150dp"
                android:minWidth="150dp"
                android:scaleType="fitXY" />

            <ProgressBar
                android:id="@+id/progressbar_khedutgatha_detail_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="visible" />
        </RelativeLayout>

        <com.agriscienceapp.font.AgriScienceTextView
            android:id="@+id/tv_khedutsafalgatha_decsription_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_khedutsafalgatha_description"
            android:layout_margin="10dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:typeface="1" />

        <ImageView
            android:id="@+id/iv_khedutsafalgatha_description_secondadv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/tv_khedutsafalgatha_decsription_detail"
            android:padding="5dp"
            android:scaleType="fitXY" />


        <com.agriscienceapp.font.AgriScienceTextView
            android:id="@+id/tv_khedutsafalgatha_decsription_detail2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/iv_khedutsafalgatha_description_secondadv"
            android:layout_margin="10dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:typeface="1" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_khedutsafalgatha_decsription_detail2"
            android:layout_marginTop="10dp">


            <ProgressBar
                android:id="@+id/progressbar_khedutgatha_detail_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_khedutsafalgatha_description_second"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:scaleType="fitXY" />


        </RelativeLayout>

    </RelativeLayout>
</ScrollView>